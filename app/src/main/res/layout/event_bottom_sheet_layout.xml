<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bottomSheetContainer"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/event_bottomDialogShetCardView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp">

<!--        1st layout for edt-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/bottom_sheet_dialog_event_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxEms="10"
                android:backgroundTint="@android:color/white"
                android:hint="e.g Portugese class every week day"
                android:padding="15dp"
                android:inputType="text"/>

        </RelativeLayout>

<!--        2nd layout for image button-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="58dp">

           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/today_eventButton"
               android:layout_width="90dp"
               android:layout_height="40dp"
               android:layout_marginStart="10dp"
               android:text="Today"
               android:paddingStart="10dp"
               android:textColor="#4CAF50"
               android:drawableStart="@drawable/event_today_icon"
               android:background="@drawable/event_bottom_dialog_bg"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/today_inbox_Button"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:text="Inbox"
                android:textAllCaps="false"
                android:layout_toRightOf="@id/today_eventButton"
                android:paddingStart="10dp"
                android:textColor="#bdbdbd"
                android:drawableStart="@drawable/inbox_icon"
                android:background="@drawable/event_bottom_dialog_bg"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/event_send_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="340sp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/send_icon" />



        </RelativeLayout>

<!--        3rd layout for all icon-->



    </androidx.cardview.widget.CardView>


</RelativeLayout>