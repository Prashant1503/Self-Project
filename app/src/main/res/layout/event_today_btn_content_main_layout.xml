<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/event_main_linearContainer"
    android:layout_marginTop="?attr/actionBarSize">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

<!--        1st layout for block-->

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CalendarView
                android:id="@+id/today_btn_calendar_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

              <androidx.appcompat.widget.LinearLayoutCompat
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="320dp"
                  android:weightSum="1"
                  android:orientation="horizontal">

                  <androidx.appcompat.widget.AppCompatButton
                      android:id="@+id/add_event_calender_btn"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="@android:color/transparent"
                      android:drawableStart="@drawable/add_orange_icon"
                      android:paddingStart="12dp"
                      android:text="@string/add_event_txt"
                      android:layout_marginStart="12dp"
                      android:drawablePadding="12dp"
                      android:layout_weight="0.5"
                      android:textColor="#F9C60E" />

                  <androidx.appcompat.widget.AppCompatButton
                      android:id="@+id/event_rechedule_calender_btn"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="@android:color/transparent"
                      android:paddingStart="12dp"
                      android:text="@string/event_reschedule_txt"
                      android:layout_marginStart="12dp"
                      android:drawablePadding="12dp"
                      android:layout_weight="0.5"
                      android:textColor="#F9C60E" />


              </androidx.appcompat.widget.LinearLayoutCompat>

            </CalendarView>


        </androidx.core.widget.NestedScrollView>



    </androidx.appcompat.widget.LinearLayoutCompat>




</androidx.appcompat.widget.LinearLayoutCompat>